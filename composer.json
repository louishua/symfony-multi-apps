{
    "name": "louishua/multi-apps",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "apps/pony/PonyKernel.php",
            "apps/pony/PonyCache.php"
        ]
    },
    "require": {
        "php": ">=5.3.9",
        "symfony/symfony": "2.8.*",
        "doctrine/orm": "^2.4.8",
        "doctrine/doctrine-bundle": "~1.4",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "~2.0",
        "symfony/assetic-bundle": "^2.8"
    },
    "require-dev": {
        "sensio/generator-bundle": "~3.0",
        "symfony/phpunit-bridge": "~2.7"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Jbp\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Jbp\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Jbp\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Jbp\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Jbp\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "dm-apps":[
            {
                "app-dir": "apps/pony",
                "web-dir": "web/pony"
            },
            {
                "app-dir": "apps/api",
                "web-dir": "web/api"
            },
            {
                "app-dir": "apps/usercenter",
                "web-dir": "web/usercenter"
            }
        ],

        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "apps/config/common_parameters.yml"
        }
    }
}
